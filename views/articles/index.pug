extends ../partials/layout

block content
  .container
    h1.mb-4.mt-3 Markdown Blog Post
    a.btn.btn-success(href="/articles/new") New Article

    if articles && articles.length > 0
      each article in articles
        .card.mt-4
          .card-body
            h2.card-title= article.title
            div.card-subtitle.text-muted.mb-2= article.createdAt.toLocaleDateString()
            p.card-text= article.description
            a.btn.btn-primary.me-1(href=`/articles/${article.slug}`) Read More
            form.d-inline(action=`/articles/${article.id}?_method=DELETE`)
              button.btn.btn-danger(type="submit") Delete
    else
      .alert.alert-info.mt-3 No articles found, please create one to get started.